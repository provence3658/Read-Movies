/* pages/posts/posts-item/posts-item.wxss */
.post-container {
  display: flex;
  flex-direction: column;
  margin-top:20rpx;
  margin-bottom: 40rpx;
  background-color: #fff;
  border-top:1px solid #ededed;
  border-bottom: 1px solid #ededed;
  padding-bottom: 5px;
}
.post-author-date {
  margin: 10rpx 0 0 10rpx;
}
.post-author {
  width:60rpx;
  height:60rpx;
  vertical-align: middle;
}
.post-date {
  margin-left:20rpx;
  vertical-align: middle;
}
.post-title {
  font-size:34rpx;
  font-weight:700;
  color:#333;
  margin-top: 10px;
  margin-left: 5px;
  margin-bottom: 10px;
}
.post-image {
  margin-left:16px;
  width:100%;
  height: 400rpx;
  margin:auto 0;
  margin-bottom:15px;
}
.post-content {
  color:#666;
  font-size:30rpx;
  margin-left:20rpx;
  margin-bottom:20rpx;
  letter-spacing: 2rpx;
  line-height: 40rpx;
}
.post-like {
  font-size: 13px;
  flex-direction: row;
  line-height:16px;
}
.post-like-image{
  height:16px;
  width: 16px;
  margin-left:5px;
  vertical-align: middle;
}
.post-like-font{
  vertical-align: middle;
  margin-right: 6px;
}